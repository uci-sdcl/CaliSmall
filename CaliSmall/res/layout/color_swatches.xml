<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swatches"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_large"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/black"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_black" />

        <ImageButton
            android:id="@+id/gray"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_gray" />

        <ImageButton
            android:id="@+id/light_gray"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_light_gray" />

        <ImageButton
            android:id="@+id/purple"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_purple" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_blue" />

        <ImageButton
            android:id="@+id/green"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_green" />

        <ImageButton
            android:id="@+id/red"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_red" />

        <ImageButton
            android:id="@+id/orange"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_orange" />

        <ImageButton
            android:id="@+id/yellow"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/swatch_yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_thicknesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colors"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/padding_large"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/line_1px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_1px" />

        <ImageButton
            android:id="@+id/line_2px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_2px" />

        <ImageButton
            android:id="@+id/line_3px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_3px" />

        <ImageButton
            android:id="@+id/line_5px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_5px" />

        <ImageButton
            android:id="@+id/line_7px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_7px" />

        <ImageButton
            android:id="@+id/line_9px"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/color_swatch"
            android:contentDescription="@string/label"
            android:src="@drawable/line_9px" />

        <CheckBox
            android:id="@+id/resize_with_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/line_resize" />
    </LinearLayout>

    <Button
        android:id="@+id/close_style_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_thicknesses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_large"
        android:text="@string/close" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/edu.uci.calismall">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/holo_background"/>
            <stroke android:width="3dp" android:color="@android:color/holo_blue_dark" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_background"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>